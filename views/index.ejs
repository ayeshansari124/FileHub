<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FileHub</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.ico" />

    <!-- Google Font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Sirin+Stencil&display=swap"
      rel="stylesheet"
    />

    <!-- Tailwind CSS -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <!-- Global Styles -->
    <style>
      body {
        font-family: "Sirin Stencil", sans-serif;
      }

      /* Dark overlay for contrast */
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.45);
        z-index: -1;
      }
    </style>
  </head>

  <body
    class="min-h-screen flex flex-col items-center bg-fixed bg-cover bg-center text-white"
    style="background-image: url('/images/bg.png');"
  >
    <main class="container mx-auto w-full px-4 py-16">
      <!-- Upload Form -->
      <section
        class="relative w-full max-w-2xl mx-auto mb-16 rounded-2xl overflow-hidden shadow-2xl border border-white/10"
      >
        <!-- Background -->
        <div
          class="absolute inset-0 bg-cover bg-center"
          style="
            background-image: url('/images/section.svg');
            filter: brightness(1.1) contrast(1.05);
          "
        ></div>

        <!-- Glass overlay -->
        <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>

        <!-- Form -->
        <form
          action="/upload"
          method="post"
          class="relative flex flex-col gap-5 p-8"
        >
          <h2 class="text-2xl font-bold text-center mb-2 tracking-wide">
            Create New File
          </h2>

          <input
            name="title"
            type="text"
            placeholder="Enter Title"
            required
            class="p-4 rounded-lg bg-white/10 placeholder:text-gray-300 focus:ring-2 focus:ring-blue-400 outline-none transition"
          />

          <textarea
            name="desc"
            placeholder="Enter Description"
            required
            class="p-4 h-40 rounded-lg bg-white/10 placeholder:text-gray-300 focus:ring-2 focus:ring-blue-400 outline-none resize-none transition"
          ></textarea>

          <button
            type="submit"
            class="bg-blue-600 hover:bg-blue-800 hover:cursor-pointer px-6 py-3 rounded-lg font-bold transition-colors duration-300"
          >
            Create File
          </button>
        </form>
      </section>

      <!-- Files Section -->
      <section
        class="cards-container flex flex-wrap justify-center gap-8 w-full"
      >
        <% if (files && files.length > 0) { %>
          <% files.forEach(filename => { %>
            <article
              class="relative w-80 p-6 rounded-2xl shadow-lg overflow-hidden border border-white/10 transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
            >
              <!-- Background -->
              <div
                class="absolute inset-0 bg-cover bg-center"
                style="
                  background-image: url('/images/section.svg');
                  filter: brightness(1.15) contrast(1.05);
                "
              ></div>

              <!-- Glass overlay -->
              <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>

              <div class="relative flex flex-col gap-4">
                <h3 class="text-lg font-semibold truncate">
                  <%= filename %>
                </h3>

                <div class="flex flex-wrap gap-3 justify-between items-center">
                  <button
                    class="bg-green-600 hover:bg-green-500 cursor-pointer px-4 py-2 rounded-lg font-semibold transition"
                    onclick="window.location.href='/files/<%= filename %>'"
                  >
                    Read
                  </button>

                  <button
                    class="bg-yellow-600 hover:bg-yellow-500 cursor-pointer px-4 py-2 rounded-lg font-semibold transition"
                    onclick="window.location.href='/edit/<%= filename %>'"
                  >
                    Edit
                  </button>

                  <button
                    class="bg-red-600 hover:bg-red-500 cursor-pointer px-4 py-2 rounded-lg font-semibold transition"
                    onclick="window.location.href='/delete/<%= filename %>'"
                  >
                    Delete
                  </button>
                </div>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <p class="font-bold text-lg text-center mt-10">No files yet</p>
        <% } %>
      </section>
    </main>

    <!-- Footer -->
    <footer class="mt-20 pb-6 text-sm text-gray-400">
      Built with ðŸ’œ by Ayesha
    </footer>
  </body>
</html>
