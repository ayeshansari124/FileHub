<div class="container mx-auto py-16 px-4 w-full max-w-xl">
  <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-white/10">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/section.svg'); filter: brightness(1.1) contrast(1.05);"></div>
    <div class="absolute inset-0 bg-black/40 backdrop-blur-md"></div>

    <form action="/edit" method="POST" class="relative flex flex-col gap-6 p-10">
      <h1 class="text-3xl font-bold text-center mb-2 tracking-wide">Edit File</h1>
      <input type="hidden" name="previousName" value="<%= filename %>" />

      <div class="flex flex-col">
        <label for="newName" class="font-semibold mb-2">File Title</label>
        <input id="newName" name="newName" type="text" value="<%= filename %>" required class="p-4 rounded-lg bg-white/10 text-white placeholder:text-gray-300 outline-none focus:ring-2 focus:ring-blue-400 transition" />
      </div>

      <div class="flex flex-col">
        <label for="description" class="font-semibold mb-2">Description</label>
        <textarea id="description" name="description" rows="6" required class="p-4 rounded-lg bg-white/10 text-white placeholder:text-gray-300 outline-none focus:ring-2 focus:ring-blue-400 resize-none transition"><%= description %></textarea>
      </div>

      <div class="flex justify-end gap-4 mt-4">
        <button type="button" onclick="window.location.href='/'" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 cursor-pointer font-semibold transition rounded-lg">Cancel</button>
        <button type="submit" class="px-6 py-3 bg-yellow-600 hover:bg-yellow-800 cursor-pointer rounded-lg font-bold transition-colors duration-300">Save Changes</button>
      </div>
    </form>
  </div>
</div>
